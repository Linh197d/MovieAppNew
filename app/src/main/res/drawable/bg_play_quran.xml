<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="16dp"
                android:topRightRadius="16dp" />
            <solid android:color="#26000000" />
            <padding android:top="@dimen/_1sdp" />
        </shape>
    </item>

    <!-- Background chính với gradient & stroke -->
    <item android:top="@dimen/_1sdp">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="16dp"
                android:topRightRadius="16dp" />
            <gradient
                android:angle="45"
                android:endColor="#008040"
                android:startColor="#0E8C62" />
            <stroke
                android:width="1dp"
                android:color="#74B2AD" />
        </shape>
    </item>

</layer-list>
