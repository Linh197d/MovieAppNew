<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_guide"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="parent" />

    <com.qibla.muslimday.app2025.customeview.textprimarygradient.TextViewPrimaryGradient
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:ellipsize="end"
        android:fontFamily="@font/inter_semibold"
        android:maxLines="2"
        android:text="ABCBCB"
        android:textAlignment="center"
        android:textColor="@color/color_2D3640"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintBottom_toTopOf="@+id/tv_content" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:lines="3"
        android:maxLines="3"
        android:textColor="@color/color_2D3640"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toTopOf="@id/ll_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/ll_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/tvFieldIntroNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp">

        <ImageView
            android:id="@+id/view_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_view_select" />

        <ImageView
            android:id="@+id/view_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:src="@drawable/ic_view_un_select" />

        <ImageView
            android:id="@+id/view_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:src="@drawable/ic_view_un_select" />

        <ImageView
            android:id="@+id/view_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_view_un_select" />

    </LinearLayout>

    <com.qibla.muslimday.app2025.customeview.textprimarygradient.TextViewPrimaryGradient
        android:id="@+id/tvFieldIntroNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/inter_semibold"
        android:gravity="end"
        android:padding="10dp"
        android:paddingVertical="7dp"
        android:text="@string/string_next"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintBottom_toTopOf="@id/flBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/flBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <FrameLayout
            android:id="@+id/flFieldIntroAds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <include layout="@layout/layout_shimer_native_new" />

        </FrameLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_view"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_circle"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_intro" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
