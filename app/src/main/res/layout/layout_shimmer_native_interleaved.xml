<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ad_unit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_native_interleaved"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dip"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/AppTheme.Ads"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:backgroundTint="@color/white" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:minWidth="120dp"
                        android:minHeight="120dp">

                        <com.google.android.gms.ads.nativead.MediaView
                            android:id="@+id/ad_media"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:minWidth="120dp"
                            android:minHeight="120dp" />

                        <View
                            android:id="@+id/view_ad_media"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:background="@color/lightTransparent" />
                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:clickable="false"
                    android:minWidth="120dp"
                    android:minHeight="120dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/ad_headline"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@color/lightTransparent"
                                android:clickable="false"
                                android:ellipsize="end"
                                android:lines="2"
                                android:maxLines="2"
                                android:textColor="#E6E6E6"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/view_head_line"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/lightTransparent" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/ad_body"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@color/lightTransparent"
                                android:clickable="false"
                                android:maxLines="3"
                                android:textColor="#E6E6E6"
                                android:textSize="11sp" />

                            <View
                                android:id="@+id/view_body"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/ad_call_to_action"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@color/lightTransparent"
                                android:gravity="center"
                                android:textColor="#FFFFFF"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/view_call_to_action"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</com.facebook.shimmer.ShimmerFrameLayout>