<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_12ssp"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@drawable/shape_bg_color_white_corner_16"
    android:elevation="@dimen/_10sdp"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_item_child_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12ssp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/inter_regular"
        android:gravity="start"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingVertical="@dimen/_11ssp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/color_2D3640"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_ic_arrow_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Darood-e-ibraheemi" />

    <ImageView
        android:id="@+id/img_ic_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_12ssp"
        android:background="@drawable/ic_arrow_next_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divine_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/bg_divine_line"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/tv_item_child_content"
        app:layout_constraintRight_toRightOf="@id/tv_item_child_content"
        app:layout_constraintTop_toBottomOf="@id/tv_item_child_content" />

</androidx.constraintlayout.widget.ConstraintLayout>