<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clAzkarRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:background="@drawable/shape_bg_color_white_corner_16"
    android:elevation="@dimen/_10sdp"
    android:paddingHorizontal="@dimen/_10sdp"
    android:paddingVertical="@dimen/_5sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_azkar_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ic_item_azkar"
            android:layout_width="@dimen/_18ssp"
            android:layout_height="@dimen/_18ssp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_0E8C62"
            tools:src="@drawable/ic_daily_dhikr" />

        <TextView
            android:id="@+id/tv_title_item_azkar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/color_2D3640"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/ic_item_azkar"
            app:layout_constraintEnd_toStartOf="@+id/img_ic_arrow_right"
            app:layout_constraintStart_toEndOf="@id/ic_item_azkar"
            app:layout_constraintTop_toTopOf="@id/ic_item_azkar"
            tools:text="Daily Dhikr" />

        <ImageView
            android:id="@+id/img_ic_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_next_grey"
            app:layout_constraintBottom_toBottomOf="@id/ic_item_azkar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ic_item_azkar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_azkar_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_item_azkar"
        android:paddingVertical="@dimen/_5sdp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/cl_azkar_item" />

</androidx.constraintlayout.widget.ConstraintLayout>